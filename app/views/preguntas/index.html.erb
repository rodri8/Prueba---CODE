<%= link_to 'Inicio', inicio_path %>
<h1>Preguntas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Evaluacion</th>
      <th>Texto</th>
      <th>Correcta</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preguntas.each do |pregunta| %>
      <tr>
        <td><%= Evaluacion.find(pregunta.evaluacion_id).nombre %></td>

        <td><%= pregunta.texto %></td>
        <td><%= pregunta.correcta %></td>
        <td><%= pregunta.estado %></td>
        <td><%= link_to 'Show', pregunta %></td>
        <td><%= link_to 'Edit', edit_pregunta_path(pregunta) %></td>
        <td><%= link_to 'Destroy', pregunta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

